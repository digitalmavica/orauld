<?xml version="1.0" encoding="UTF-8"?>
<project name="orauld" default="jars" basedir=".">
	<property name="src" value="./src" />
	<property name="dst" value="./ant-build" />
	<property name="app_jar" value="${dst}/orauld.jar" />
	<property name="ant.build.javac.source" value="1.6"/>
	<property name="ant.build.javac.target" value="1.6"/>

	<path id="libs">
		<fileset dir="./lib" includes="*.jar" />
	</path>

	<target name="init">
		<mkdir dir="${dst}" />
	</target>

	<target name="compile" depends="init">
		<javac destdir="${dst}" srcdir="${src}" debug="on" encoding="utf-8" includeantruntime="false">
			<include name="github/peihanw/**" />
			<classpath refid="libs" />
		</javac>
		<copy todir="${dst}">
			<fileset dir="${src}" includes="**/*.properties" />
		</copy>
	</target>

	<target name="jars" depends="compile">
		<jar jarfile="${app_jar}" basedir="${dst}" includes="github/peihanw/**/*.*" />
	</target>

	<target name="clean">
		<delete dir="${dst}" />
		<delete file="${app_jar}" />
	</target>
</project>
